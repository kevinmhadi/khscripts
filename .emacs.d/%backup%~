#!/bin/bash


umount ~/home
umount ~/lab

mkdir -p ~/home
sshfs derosej-934@mskilab:/gpfs/commons/home/derosej-934 ~/home

mkdir -p ~/lab
sshfs derosej-934@mskilab:/gpfs/commons/groups/imielinski_lab ~/lab

mkdir -p ~/analysis
sshfs derosej-934@mskilab:/data/analysis ~/analysis

if [ ! -h ~/public_html ]
then
    ln -s ~/home/public_html ~/public_html
fi

if [ ! -h ~/DB ]
then
    ln -s ~/lab/DB ~/DB
fi

if [ ! -h ~/data ]
then
    ln -s ~/lab/data ~/data
fi

if [ ! -h ~/homes ]
then
    ln -s ~/lab/data ~/homes
fi

if [ ! -h ~/Projects ]
then
    ln -s ~/lab/projects ~/Projects
fi

if [ ! -h /data ]
then
    sudo ln -s ~/data /data
fi

if [ ! -h /analysis ]
then
    sudo ln -s ~/analysis /analysis
fi
